#!/usr/bin/env python

# We grab and print the Xauth cidr block from the node

from uvm.settings_reader import get_node_settings_item

# Read the virtual xauth pool from the IPsec node settings file
addressPool = get_node_settings_item("untangle-node-ipsec-vpn", "virtualXauthPool")

# If we don't get anything default to link-local block
if (addressPool == None):
	addressPool = str("0.0.0.0")

print addressPool
