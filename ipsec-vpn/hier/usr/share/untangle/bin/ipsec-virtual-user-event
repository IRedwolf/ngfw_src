#!/usr/bin/env python

# This script is called by untangle-l2tp ip-up and ip-down scripts
# and the ipsec-xauth-updown script to notify the IPsec node
# when L2TP and Xauth users connect and disconnect.
# ARG1 = CONNECT or GOODBYE
# ARG2 = L2TP or XAUTH
# ARG3 = IP address
# ARG4 = username
# ARG5 = connect = interface | goodbye = rxcount
# ARG6 = connect = pppd pid  | goodbye = txcount

import sys
from uvm import Uvm

# first make sure we have the right number of arguments
if (len(sys.argv) < 6):
    raise Exception("Invalid number of arguments")

# next we get the uvm context
uvmContext = Uvm().getUvmContext()

# now we get the IPsec node instance
ipsecNode = uvmContext.appManager().app("ipsec-vpn")

# if we can't find the node then throw an exception
if (ipsecNode == None):
    raise Exception("The uvm node manager could not locate ipsec-vpn app")

# found the node so call the right function based on first argument
if (sys.argv[1] == "CONNECT"):
    ipsecNode.virtualUserConnect(sys.argv[2], sys.argv[3], sys.argv[4], sys.argv[5], sys.argv[6])
elif (sys.argv[1] == "GOODBYE"):
    ipsecNode.virtualUserGoodbye(sys.argv[2], sys.argv[3], sys.argv[4], sys.argv[5], sys.argv[6])
else:
    raise Exception("Invalid first argument")

