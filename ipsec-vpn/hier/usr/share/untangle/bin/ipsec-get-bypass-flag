#!/usr/bin/env python

# We grab and print the value of bypassflag as zero or one
from uvm.settings_reader import get_node_settings_item

# Read the bypassflag from the IPsec node settings file
bypassflag = get_node_settings_item("ipsec-vpn", "bypassflag")

# If we don't get anything default to bypass mode for legacy compatibility
if (bypassflag == None):
	bypassflag = str("True")

print bypassflag
